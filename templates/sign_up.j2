<html>

<head>
    <title>Sign Up</title>
    <link href="../static/style_signup.css" rel="stylesheet">
    <script language="JavaScript">
        function goHome() {
            window.location.href = "/";
        }
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script>
        function delete_flash(flash) {
            $(flash).parent().remove()
        }
    </script>
</head>

<body>
    {% with messages = get_flashed_messages(with_categories=true) %}
    {% if messages %}
    {% for category, message in messages %}
    <div class="{{ category }}" id="flash_hide">
        {{ message }}
        <button type="button" class="close" data-dismiss="alert" onclick="delete_flash(this)">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {% endfor %}
    {% endif %}
    {% endwith %}
    <header>
        <a href="/" class="logo">PlanT</a>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a class="active" href="/signup">Sign Up</a></li>
            <li><a href="/login">Login</a></li>
        </ul>
    </header>
    <h1>Sign Up</h1>
    <form id="registration" action="/signup" method="post">
        <fieldset>
            <input type="text" class="form-control" id="first_name" name="first_name" placeholder="First Name" required>
            <br>
            <input type="text" class="form-control" id="last_name" name="last_name" placeholder="Last Name" required>
            <br>
            <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
            <br>
            <input type="tel" class="form-control" id="phone" name="phone" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}"
                placeholder="Phone" required>
            <br>
            <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
            <br>
            <input type="password" class="form-control" id="password1" name="password1" placeholder="Password" required>
            <br>
            <input type="password" class="form-control" id="password2" name="password2" placeholder="Confirm Password"
                required>
        </fieldset>
        <input type="submit" value="Register" name="register" class="btn btn-primary" id="register">
        <input class="btn" type="button" value="Cancel" onClick="goHome()">
    </form>
    <p>Have an account? <a href="/login">Login</a></p>
</body>

</html>